<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foody.Admin.Control.TableView"
             x:Name="This">
       
    <VerticalStackLayout BindingContext="{Reference This}" Spacing="20" Margin="0,20" HorizontalOptions="FillAndExpand">

        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*,*" IsVisible="{Binding HasSearchbar}">
            <Entry Grid.Column="0" Placeholder="Find.." TextColor="Black"/>
            <Line HeightRequest="1" BackgroundColor="LightGray" Grid.Row="1" Grid.ColumnSpan="3"/>
        </Grid>

        <CollectionView
            ItemsSource="{Binding Collection}"
            ItemTemplate="{Binding Template}"
            SelectionMode="None"
            EmptyView="No data..">

            <CollectionView.Header>
                <Grid HorizontalOptions="FillAndExpand">
                    <Frame BackgroundColor="White" BorderColor="Transparent" CornerRadius="0">
                        <Grid ColumnDefinitions="{Binding Columns}" HorizontalOptions="FillAndExpand"
                              x:Name="columnNames">

                        </Grid>
                    </Frame>
                </Grid>
            </CollectionView.Header>

        </CollectionView>

    </VerticalStackLayout>

</ContentView>

